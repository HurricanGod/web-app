<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/rabbit
        http://www.springframework.org/schema/rabbit/spring-rabbit-1.0.xsd">

    <!-- 定义连接工厂,用于创建连接等 -->
    <rabbit:connection-factory id="connectionFactory"
                               username="${rabbit.username}"
                               password="${rabbit.password}"
                               host="${rabbit.hosts}"
                               port="${rabbit.port}"/>
    <rabbit:admin connection-factory="connectionFactory"/>

    <!--
        queue 队列声明
         durable：true → 是否持久化
         auto-delete：当没有任何消费者使用时，自动删除该队列
         exclusive ：是否为当前连接的专用队列，只能由创建者使用，在连接断开后，会自动删除该队列
    -->
    <!-- 创建名为 save_out_log 的消息队列 -->
    <rabbit:queue id="save_out_log" durable="true" auto-delete="false"
                  exclusive="false" name="save_out_log"/>


    <rabbit:queue id="exception_queue" name="exception_queue" auto-delete="false"
                  exclusive="false" durable="true"/>

    <rabbit:queue id="info_queue" name="info_queue" auto-delete="false"
                  exclusive="false" durable="true"/>

    <rabbit:queue id="for_award_queue" name="for_award_queue" auto-delete="false"
                  exclusive="false" durable="true"/>

    <rabbit:queue id="for_log_queue" name="for_log_queue" auto-delete="false"
                  exclusive="false" durable="true"/>

    <!-- exchange queue binging key 绑定 -->
    <rabbit:direct-exchange name="mq-exchange" durable="true"
                            auto-delete="false" id="mq-exchange">
        <rabbit:bindings>
            <rabbit:binding queue="save_out_log" key="save_out_log_key"/>
        </rabbit:bindings>
    </rabbit:direct-exchange>


    <!--
      spring amqp默认的是jackson 的一个插件,目的将生产者生产的数据转换为json存入消息队列.
      由于fastjson的速度快于jackson,这里替换为fastjson的一个实现
    -->
    <bean id="jsonMessageConverter" class="cn.hurrican.rabbitmq.producer.utils.FastJsonMessageConverter" />

    <rabbit:fanout-exchange name="log_fanout_exchange" durable="true"
                            auto-delete="false" id="fanoutExchange">
        <rabbit:bindings>
            <rabbit:binding queue="info_queue">
            </rabbit:binding>
            <rabbit:binding queue="exception_queue">
            </rabbit:binding>
        </rabbit:bindings>
    </rabbit:fanout-exchange>

    <rabbit:topic-exchange name="topic_exchange" id="topic_exchange" auto-delete="false" durable="true">
        <rabbit:bindings>
            <rabbit:binding queue="for_award_queue" pattern="awardRecord.#"/>
            <rabbit:binding queue="for_log_queue" pattern="*.*.log" />
        </rabbit:bindings>
    </rabbit:topic-exchange>

    <!-- spring template声明 -->
    <rabbit:template id="amqpTemplate" connection-factory="connectionFactory" message-converter="jsonMessageConverter"/>
</beans>